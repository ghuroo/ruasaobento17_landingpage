mixin researchers(researchers)
    each item in researchers
        if item.active
            .item.grid-50.mobile-grid-100
                .author.grid-100.mobile-grid-100= item.name
                    span – #{ item.title }
                .quote.grid-100.mobile-grid-100
                    span.mark “
                    | !{ item.text }
                    span.mark.second ”
                .grid-100.mobile-grid-100.side-by-side
                    .text-ornament.child: .object
                    .read-more.down.brown.child ler mais

mixin articles(articles)
    each item in articles
        li.grid-100.mobile-grid-100
            a(href=item.file target="_blank")= item.name


.apartment.grid-100.mobile-grid-100

    .background2
    
    .waypoint.grid-container(data-index="4")
        a(name="fernando-pessoa")

        .wrapper.grid-100.mobile-grid-100

            .picture.mobile-grid-100.hide-on-desktop.fadein
                img(src=about.images[0].url)

            .copy.grid-60.mobile-grid-100.fadein
                .title.type3.grid-100.mobile-grid-100
                    span.ornament.black= about.name
                        //- | Fernado Pessoa
                        //- br
                        //- | e este apartamento
                .body.type1.grid-100.mobile-grid-100!= about.text

            .picture.grid-40.hide-on-mobile.fadein
                img(src=about.images[0].url)

            .box.grid-100.mobile-grid-100.fadein
                +researchers([about.researcher1, about.researcher2])

            .anchors.grid-100.mobile-grid-100.fadein
                ul
                    +articles([ about.article1, about.article2 ])

    .waypoint.grid-container(data-index="9")
        a(name="manuscritos")

        .content-script.grid-100.mobile-grid-100
            img.background(src="/images/scripts-background.png").hide-on-mobile

            include ./flipbook

            .grid-50.mobile-grid-100.prefix-50.mobile-center
                .title.type1.grid-100.mobile-grid-100.fadein: span.ornament.black Alguns manuscritos originais de Fernando Pessoa no período em que viveu na Rua de São bento, 17
                .buttons.grid-100.mobile-grid-100
                    each item in manuscripts
                        button.button.type2(data-flipbook-target=item.name).fadein=item.name
                    //- button.button.type2(data-flipbook-target="Diário Pessoal") Diário pessoal
                    //- button.button.type2(data-flipbook-target="Diários de Leitura") Diário de Leitura
                    //- button.button.type2(data-flipbook-target="Textos & Anotações") Alguns textos & anotações
                .footnote.grid-100.mobile-grid-100
                    span.
                        *Todos os manuscritos encontrados aqui são reproduções de material encontrado na internet
                        da cópia pública do espólio de Fernando Pessoa albergado na Biblioteca Nacional de Portugal.  
    
